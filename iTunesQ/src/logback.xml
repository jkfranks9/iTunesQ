<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>iTunesQ.log</file>

    <encoder>
      <pattern>%date %level [%thread] [%file:%line] %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="FILE" />
  </root>
</configuration>